<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_introdueixnom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introdueix el teu nom" />

    <EditText
        android:id="@+id/editText_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_nomconvidat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introdueix el nom del convidat" />

    <EditText
        android:id="@+id/editText_any"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tv_introdueixmes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introdueix el mes de la festa" />

    <EditText
        android:id="@+id/editText_mes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/tv_introdueixdia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introdueix el dia de la festa" />

    <EditText
        android:id="@+id/editText_dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introdueix el lloc de l'event" />

    <EditText
        android:id="@+id/editTextlloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introdueix l'hora de l'event" />

    <EditText
        android:id="@+id/editTexthora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time" />

    <Button
        android:id="@+id/enviar_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar" />

    <Button
        android:id="@+id/buidar_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buidar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars[0]" />

        <TextView
            android:id="@+id/tv_resposta"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:text="Hola X! Em complau convidar-te a la meva festa d'aniversari el dia XX de XXXX. L'event será a XXXXXX a les XX:XX. Moltes gràcies, XX." />
    </LinearLayout>


</LinearLayout>